<li class="bibfolder-item">
    <span class="authors" tal:replace="structure view/item/Authors">Authors</span> (<span tal:content="view/item/getPublication_year"></span>).
    <span class="title" tal:content="view/item/Title"/>.
    <i class="journal" tal:condition="view/getJournal" tal:content="view/getJournal" />
    <i class= "volume" tal:content="python: '%s' % view.formatVolume()" />
    <span class="pages" tal:condition="view/item/getPages" tal:content="view/item/getPages" />.
    <meta:block tal:condition="view/getFormattedIdentifiers">
        &nbsp; <span tal:content="view/getFormattedIdentifiers">(doi:xxxx/xxx.xxxx, issn: xxx-xxx)</span>
    </meta:block>
    <span class="files" tal:condition="view/getPdfUrl|view/getUrl">
        <a href="#" tal:attributes="href view/getPdfUrl; target string:_blank" tal:condition="view/getPdfUrl">
            <img src="++resource++Products.GEMI/pdf.gif" />
        </a>
        <a href="#" tal:attributes="href view/getUrl; target string:_blank" tal:condition="view/getUrl">
            <img src="++resource++Products.GEMI/link.png" />
        </a>
    </span>
</li>